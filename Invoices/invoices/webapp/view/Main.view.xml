<mvc:View controllerName="logaligroup.invoices.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <Panel headerText="{i18n>helloPanel}" class="sapUiResponsiveMargin" width="auto">
                <content>
                    <Button text="{i18n>showHelloButtonText}" press=".onShowHello" class="sapUiSmallMargin"></Button>
                    <Input value="{/recipient/name}" 
                           valueLiveUpdate="true" 
                           width="60%" />
                    <Text text="Hello {/recipient/name}" class="sapUiSmallMargin boldElements"/> 

                </content>
            </Panel>
        </content>
    </Page>
</mvc:View>
